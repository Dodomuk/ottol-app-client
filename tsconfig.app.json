{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@desktop/*": ["./src/components/desktop/*"],
      "@mobile/*": ["./src/components/mobile/*"],
      "@hybrid/*": ["./src/components/hybrid/*"],
      "@assets/*": ["./src/assets/*"],
      "@store/*": ["./src/store/*"],
      "@common/*": ["./src/common/*"]
    }
  }
}
